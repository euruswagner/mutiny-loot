<div class="box col-10 offset-1">
  <h2 class="underline">Melee</h2>
  <div class="row">
    <% melee_index.each do |melee| %>
      <div class="col-lg-6">
        <h4>
          <div class="row no-left-margin">
            <%= link_to raider_path(melee.id) do   %>
              <h4 class="<%= class_color(melee) %>"><%= melee.name %></h4>
            <% end %>
            &nbsp &nbspTotal Points: <%= total_points(melee) %>
          </div> 
          <% if melee.attendances.present? %>
            Last raid:
            <%= melee.attendances.last.notes %> - <%= melee.attendances.last.points %>
          <% end %>
        </h4>
      </div>
    <% end %>
  </div>
  <h2 class="underline">Ranged</h2>
  <div class="row">
    <% ranged_index.each do |ranged| %>
      <div class="col-lg-6">
        <h4>
          <div class="row no-left-margin">
            <%= link_to raider_path(ranged.id) do   %>
              <h4 class="<%= class_color(ranged) %>"><%= ranged.name %></h4>
            <% end %>
            &nbsp &nbspTotal Points: <%= total_points(ranged) %>
          </div> 
          <% if ranged.attendances.present? %>
            Last raid:
            <%= ranged.attendances.last.notes %> - <%= ranged.attendances.last.points %>
          <% end %>
        </h4>
      </div>
    <% end %>
  </div>
  <h2 class="underline">Healers</h2>
  <div class="row">
    <% healer_index.each do |healer| %>
      <div class="col-lg-6">
        <h4>
          <div class="row no-left-margin">
            <%= link_to raider_path(healer.id) do   %>
              <h4 class="<%= class_color(healer) %>"><%= healer.name %></h4>
            <% end %>
            &nbsp &nbspTotal Points: <%= total_points(healer) %>
          </div> 
          <% if healer.attendances.present? %>
            Last raid:
            <%= healer.attendances.last.notes %> - <%= healer.attendances.last.points %>
          <% end %>
        </h4>
      </div>
    <% end %>
  </div>
</div>