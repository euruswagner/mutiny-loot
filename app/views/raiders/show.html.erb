<div class="box col-10 offset-1">
  <h3><%= @raider.name %> - Total Points: <%= total_points(@raider) %> |
    Points earned: <%= points_earned(@raider) %> | Points spent: <%= points_spent(@raider) %></h3>

  <div class="row">
    <div class="col-4">
      <h3 class="underline">Raids Attended</h3>
      <% @raider.attendances.each do |attendance| %>
        <h4><%= attendance.notes %> - <%= attendance.points %></h4>
      <% end %>
    </div>
    <div class="col-8">
      <h3 class="underline">Items Won</h3>
      <% @raider.winners.each do |winner| %>
        <h4><%= winner.item.name %> - <%= winner.points_spent %></h4>
      <% end %>
    </div>
  </div>
  <hr class="grey">
  <div class="col-12">
    <h3 class="underline scoot-left">Priority List</h3>
    <% priority_rankings.each do |x| %>
      <div class="row">
        <% @raider.priorities.where(ranking: x).each do |priority| %>
          <h4><%= link_to priority.item.name, item_path(priority.item), class: 'zones' %> - <%= priority.ranking %>&nbsp</h4>
          <% if current_user.try(:admin?) %>
            <%= link_to 'X', item_priority_path(item_id: priority.item_id, priority_id: priority.id), method: :delete, data: {confirm: 'Are you sure you want delete this?'}, class: 'btn btn-sm btn-secondary' %>&nbsp
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
