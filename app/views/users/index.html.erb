                <%= link_to user_demote_path(user), method: :get, data: {confirm: 'Are you sure you want to demote this user to a non raider?'} do %>
                    <button class="btn btn-primary">Demote this user!</button>
                <% end %>
            </div>
            <div class="col-4">
                <%= link_to "Promote this user!", user_admin_path(user), method: :get, data: {confirm: 'Are you sure you want to promote this user to an admin?'}, class: 'btn btn-secondary' %>
            </div>
        </div>
    <% end %>
