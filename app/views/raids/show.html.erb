<div class="box col-10 offset-1">
  <div class="row">
    <div class="col-10"> 
      <h1><%= @raid.name %></h1>
      <h3> - <%= @raid.start_time.strftime("%B %-d, %Y %l:%M %p") %></h3>
    </div>
    <% if current_user && current_user.signed_up_for(@raid) %>

    <% else %>
      <%= render partial: 'signup_for_raid' %> 
    <% end %>
  </div>
  <%= render partial: 'raid_signups' %>
  <% if current_user.try(:admin?) %>
    <br />
    <hr class="grey">
    <div class="col-12">
      <div class="row">
        <%= render partial: 'edit_raid' %>
        &nbsp &nbsp
        <%= link_to 'Delete Raid', raid_path(@raid), method: :delete, data: {confirm: 'Are you sure you want to delete this raid?'}, class: 'btn btn-secondary' %>
      </div>
    </div> 
  <% end %>
</div>